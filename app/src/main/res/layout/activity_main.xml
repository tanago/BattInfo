<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:stretchColumns="1"
    android:background="@mipmap/fondo">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/status"
                android:id="@+id/labelStatus"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:textSize="35sp"
                android:textColor="#cfcfcf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/tbloaded"
                android:id="@+id/fieldStatus"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:textColor="#cfcfcf" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/current"
                android:id="@+id/labelCurrent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:textSize="35sp"
                android:textColor="#cfcfcf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/tbloaded"
                android:id="@+id/fieldCurrent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:textColor="#cfcfcf" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/voltage"
                android:id="@+id/labelVoltage"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:textSize="35sp"
                android:textColor="#cfcfcf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/tbloaded"
                android:id="@+id/fieldVoltage"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:textColor="#cfcfcf" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/wear"
                android:id="@+id/labelWear"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:textSize="35sp"
                android:textColor="#cfcfcf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/tbloaded"
                android:id="@+id/fieldWear"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:textColor="#cfcfcf" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/percentage"
                android:id="@+id/labelPercentage"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:textSize="35sp"
                android:textColor="#cfcfcf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/tbloaded"
                android:id="@+id/fieldCharge"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:textColor="#cfcfcf" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/temp"
                android:id="@+id/labelTemp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:textSize="35sp"
                android:textColor="#cfcfcf" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/tbloaded"
                android:id="@+id/fieldTemp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:textColor="#cfcfcf" />
        </LinearLayout>
    </LinearLayout>

</TableLayout>

